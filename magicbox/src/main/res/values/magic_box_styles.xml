<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="commonHorizontalDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">#eeeeee</item>
    </style>

    <!-- common dialog -->

    <style name="commonDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="commonDialogItemText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/activity_item_sub_content_sp</item>
    </style>

    <!-- activity magic box -->

    <style name="activityMagicBoxItemTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/activity_item_title_sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="activityMagicBoxItemSubTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/activity_item_content_sp</item>
    </style>

    <style name="activityMagicBoxToolsGrid">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:horizontalSpacing">5dp</item>
        <item name="android:verticalSpacing">5dp</item>
        <item name="android:numColumns">4</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="activityMagicBoxToolsItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/green</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="activityMagicBoxToolsItemText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/activity_item_sub_content_sp</item>
    </style>

    <style name="activityMagicBoxPerformanceItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/activity_item_content_sp</item>
    </style>

    <!-- activity device info -->

    <style name="activityDeviceInfoValue">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="activityDeviceInfoTitle" parent="activityDeviceInfoValue">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- activity file explorer -->

    <style name="activityFileExplorerCurrentPath">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="activityFileExplorerBackToParentDir">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableLeft">@mipmap/activity_file_explorer_back_parent</item>
        <item name="android:padding">5dp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">13sp</item>
        <item name="android:text">点击返回上一级目录</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="activityFileExplorerItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- dashboard -->

    <style name="dashboardPerformanceItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="dashboardPerformanceTitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dashboard_performance_title</item>
        <item name="android:textSize">@dimen/dashboard_performance_title_sp</item>
    </style>

    <style name="dashboardPerformanceValueText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dashboard_performance_cpu_value</item>
        <item name="android:textSize">@dimen/dashboard_performance_value_sp</item>
    </style>

    <style name="dashboardPerformanceChartView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_weight">3</item>
    </style>

    <style name="dashboardNetLoggerScrollView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="dashboardNetLoggerScrollViewText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dashboard_net_logger_content</item>
        <item name="android:textSize">@dimen/dashboard_net_logger_content_sp</item>
        <item name="android:lineSpacingExtra">1dp</item>
    </style>

</resources>
