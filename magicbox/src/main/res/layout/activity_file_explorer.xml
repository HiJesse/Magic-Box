<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/activity_include_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <TextView
            style="@style/activityFileExplorerCurrentPath"
            android:text="当前路径: " />

        <TextView
            android:id="@+id/tv_current_path"
            style="@style/activityFileExplorerCurrentPath" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_back_to_parent"
        style="@style/activityFileExplorerBackToParentDir" />

    <View style="@style/commonHorizontalDivider" />

    <ListView
        android:id="@+id/lv_files"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>